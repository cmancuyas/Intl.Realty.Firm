                            <span asp-validation-for="IRFDeal.SellersLawyerAddress" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IRFDeal.SellersPhoneNumber" class="control-label fw-bolder"></label>
                            <input asp-for="IRFDeal.SellersPhoneNumber" class="form-control" />
                            <span asp-validation-for="IRFDeal.SellersPhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IRFDeal.BuyersLawyer" class="control-label fw-bolder"></label>
                            <input asp-for="IRFDeal.BuyersLawyer" class="form-control" />
                            <span asp-validation-for="IRFDeal.BuyersLawyer" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IRFDeal.BuyersLawyerAddress" class="control-label fw-bolder"></label>
                            <input asp-for="IRFDeal.BuyersLawyerAddress" class="form-control" />
                            <span asp-validation-for="IRFDeal.BuyersLawyerAddress" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="IRFDeal.BuyersPhoneNumber" class="control-label fw-bolder"></label>
                            <input asp-for="IRFDeal.BuyersPhoneNumber" class="form-control" />
                            <span asp-validation-for="IRFDeal.BuyersPhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <hr class="my-5" />
                <div class="form-group d-flex justify-content-center gap-4">
                    <input type="button" value="Cancel" class="btn btn-secondary w-15" onclick="window.location.href='@Url.Action("Index", "SaleListing")'" />
                    <input type="submit" value="Submit" class="btn btn-primary w-15" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
