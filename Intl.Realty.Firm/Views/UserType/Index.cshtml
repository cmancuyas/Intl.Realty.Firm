@using Intl.Realty.Firm.Models.Models.ViewModel.DocumentTypeAssignmentVM
@model List<DocumentTypeAssignmentViewModel>
@using System.ComponentModel.DataAnnotations
@{
    ViewData["Title"] = "DocumentTypeAssignment";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<div>
    <div class="c-content" id="documentTypeAssignmentListPartialContainer">
        <div class="d-flex justify-content-center">
            <div class="spinner-border m-5" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
    <div id="documentTypeAssignmentDeleteModalContainer"></div>
    <div id="documentTypeAssignmentDeleteMultipleModalContainer"></div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#documentTypeAssignmentListPartialContainer').load('/DocumentTypeAssignment/DocumentTypeAssignmentListPartialView');
        });
        function OpenDeleteModal(id) {
            $('#documentTypeAssignmentListPartialContainer').load('/DocumentTypeAssignment/DeleteModal/' + id, function () {
                $("#deleteConfirmModal").modal("show");
            });
        }
        function ShowDetails(id) {
            $('#item-' + id).addClass('c-show-hidden');
        }
        function HideDetails(id) {
            $('#item-' + id).removeClass('c-show-hidden');
        }
    </script>
}
