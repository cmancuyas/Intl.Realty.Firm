                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CreateIRFDealViewModel.SellersPhoneNumber" class="control-label fw-bolder"></label>
                            <input asp-for="CreateIRFDealViewModel.SellersPhoneNumber" class="form-control" />
