@using Intl.Realty.Firm.Models.Models.ViewModel.UserTypeVM
@model List<UserTypeViewModel>
@using System.ComponentModel.DataAnnotations
@{
    ViewData["Title"] = "UserType";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}

<div>
    <div class="c-content" id="userTypeListPartialContainer">
        <div class="d-flex justify-content-center">
            <div class="spinner-border m-5" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
    <div id="userTypeCreateModalContainer"></div>
    <div id="userTypeEditModalContainer"></div>
    <div id="userTypeDeleteModalContainer"></div>
    <div id="userTypeDeleteMultipleModalContainer"></div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#userTypeListPartialContainer').load('/UserType/UserTypeListPartialView');
        });

        function ShowDetails(id) {
            $('#item-' + id).addClass('c-show-hidden');
        }
        function HideDetails(id) {
            $('#item-' + id).removeClass('c-show-hidden');
        }
    </script>
}
