                            <span asp-validation-for="CreateIRFDealViewModel.FinalClosingDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CreateIRFDealViewModel.DepositAmount" class="control-label fw-bolder"></label>
                            <input asp-for="CreateIRFDealViewModel.DepositAmount" class="form-control" />
                            <span asp-validation-for="CreateIRFDealViewModel.DepositAmount" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CreateIRFDealViewModel.DepositDate" class="control-label fw-bolder"></label>
                            <input asp-for="CreateIRFDealViewModel.DepositDate" class="form-control" />
                            <span asp-validation-for="CreateIRFDealViewModel.DepositDate" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CreateIRFDealViewModel.BuyerName" class="control-label fw-bolder"></label>
                            <input asp-for="CreateIRFDealViewModel.BuyerName" class="form-control" />
                            <span asp-validation-for="CreateIRFDealViewModel.BuyerName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
