                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="CreateIRFDealViewModel.BuyersLawyer" class="control-label fw-bolder"></label>
                            <input asp-for="CreateIRFDealViewModel.BuyersLawyer" class="form-control" />
