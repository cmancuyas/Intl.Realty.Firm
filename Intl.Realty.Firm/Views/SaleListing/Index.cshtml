@using Intl.Realty.Firm.Models.Models.ViewModel.SaleListingVM
@model IEnumerable<SaleListingViewModel>
@using System.ComponentModel.DataAnnotations
@{
    ViewData["Title"] = "Sale Listing";
    Layout = "~/Views/Shared/_LayoutAfterLogin.cshtml";
}
<div>
    <div class="c-content" id="ListPartialContainer">
        <div class="d-flex justify-content-center">
            <div class="spinner-border m-5" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    </div>
    @* <div id="CreateModalContainer"></div> *@
    @* <div id="EditModalContainer"></div> *@
    <div id="DeleteModalContainer"></div>
    <div id="DeleteMultipleModalContainer"></div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ListPartialContainer').load('/SaleListing/ListPartialView');
        });

        function ShowDetails(id) {
            $('#item-' + id).addClass('c-show-hidden');
        }
        function HideDetails(id) {
            $('#item-' + id).removeClass('c-show-hidden');
        }
    </script>
}
